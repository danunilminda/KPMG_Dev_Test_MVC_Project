@model CsvReader.ViewModel.DeleteConfirmationViewModel
@{
    ViewBag.Title = "Delete Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Are you sure you want to delete this?</h2>
<div>
    <h5>Transaction Details</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Transaction.Account)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.Account)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Transaction.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Transaction.CurrencyCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.CurrencyCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Transaction.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Transaction.DateUploaded)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Transaction.DateUploaded)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Home", new { id = Model.Transaction.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        
        <div class="form-actions no-color">
            @Html.HiddenFor(t => t.Transaction.Id)
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
