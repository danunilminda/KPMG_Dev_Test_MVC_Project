@model CsvReader.ViewModel.TransactionFormViewModel
@{
    ViewBag.Title = "Edit Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Transaction</h2>

@using (Html.BeginForm("Save", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(t => t.Transaction.Account)
        @Html.TextBoxFor(t => t.Transaction.Account, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.Transaction.Description)
        @Html.TextBoxFor(t => t.Transaction.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.Transaction.CurrencyCode)
        @Html.TextBoxFor(t => t.Transaction.CurrencyCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.Transaction.Amount)
        @Html.TextBoxFor(t => t.Transaction.Amount, new { @class = "form-control" })
    </div>
    <div class="form-actions no-color">
        @Html.HiddenFor(t => t.Transaction.Id)
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-default" })
    </div>
    
}
